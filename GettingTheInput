import java.util.Scanner;

public class GettingTheInput {
	public static void main(String[] args) { 
		
		System.out.println("Please enter the number:");
		// This will be printed to the user in order to get the input.
		
		Scanner TheNumberTaker = new Scanner(System.in);
		/* The scanner function that is used to get the input by, is called
		 * "TheNumberTaker".
		 */
		
		int TheNumberEntered = TheNumberTaker.nextInt();
		/* The input will be stored in the integer variable
		 * namely "TheNumberEntered" using the scanner function called
		 * "TheNumberTaker" which is defined in line 9.
		 */
		
		System.out.print("Your number is: ");
		//Before returning and showing the input, this will be printed.
		
		System.out.print(TheNumberEntered);
		// Eventually, the output is printed here.
		
		TheNumberTaker.close();
		// The "TheNumberTaker" function is closed.
	}
}
